<% provide(:container_append_class, [:white]) %>
<%#= link_to 'Add', new_room_path, remote: true, class: %[btn btn-primary], style: 'width: 120px; margin-bottom: 50px;' %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nickname</th>
      <th scope="col">Number Of Report</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each.with_index(1) do |user, index| %>
    <tr>
      <%= content_tag :th, index, scope: 'row' %>
      <%= content_tag :td, user.nickname %>
      <%= content_tag :td, user.reports.length %>
      <td>
        <%#= link_to 'Delete', room, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: %[btn btn-danger], style: 'width: 120px' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div id="user-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>