<% p ActionCable.server.open_connections_statistics %>

<% @rooms.each do |room| %>
  <%= link_to room do %>
  <div class="card">
    <div class="card-block">
      <h4 class="card-title"><%= room.name %></h4>
      <p><%= ChatChannel.connected_users(room).count %>/<%= room.capacity %></p>
    </div>
  </div>
  <% end %>
<% end %>
